				"url": {
					"raw": "{{BASE_URL}}/api/orders",
					"host": ["{{BASE_URL}}"],
					"path": ["api", "orders"]
				},
				"description": "Submit a new swap order. Returns orderId and WebSocket URL for real-time updates."
			},
			"response": []
		},
		{
			"name": "Get Order by ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{BASE_URL}}/api/orders/:orderId",
					"host": ["{{BASE_URL}}"],
					"path": ["api", "orders", ":orderId"],
					"variable": [
						{
							"key": "orderId",
							"value": "your-order-id-here"
						}
					]
				},
				"description": "Get detailed information about a specific order including quote history"
			},
			"response": []
		},

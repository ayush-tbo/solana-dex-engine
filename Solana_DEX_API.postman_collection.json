			"name": "List All Orders",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{BASE_URL}}/api/orders?limit=50&offset=0",
					"host": ["{{BASE_URL}}"],
					"path": ["api", "orders"],
					"query": [
						{
							"key": "limit",
							"value": "50"
						},
						{
							"key": "offset",
							"value": "0"
						}
					]
				},
				"description": "Get paginated list of all orders with optional filtering"
			},
			"response": []
		},

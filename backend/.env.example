# Server Configuration
NODE_ENV=development
PORT=3000
WS_PORT=3001

# Database Configuration
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://postgres:password@localhost:5432/dex_engine

# Blockchain Configuration
RPC_URL=https://api.devnet.solana.com
HELIUS_API_KEY=your_helius_key_here
SOLANA_PRIVATE_KEY=your_base58_encoded_private_key_here

# Queue Configuration
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=admin123

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Order Processing
MAX_CONCURRENT_ORDERS=10
MAX_ORDERS_PER_MINUTE=100
ORDER_RETRY_ATTEMPTS=3
ORDER_TIMEOUT_MS=30000

# Slippage Configuration
DEFAULT_SLIPPAGE=0.01
MAX_SLIPPAGE=0.05

# Priority Fees (in microlamports)
PRIORITY_FEE_MICRO_LAMPORTS=50000
COMPUTE_UNIT_LIMIT=400000
